{
    "$id": "http://example.com/example.json",
    "type": "object",
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "actions": {
            "$id": "/properties/actions",
            "type": "array",
            "items": {
                "$id": "/properties/actions/items",
                "type": "object",
                "properties": {
                    "action": {
                        "$id": "/properties/actions/items/properties/action",
                        "type": "string",
                        "title": "Track action to follow",
                        "default": "",
                        "enum": [
                            "comment",
                            "include",
                            "link",
                            "menuSelect",
                            "buttonClick",
                            "controlChange",
                            "controlSelect",
                            "controlDoubleClick",
                            "controlClick",
                            "controlRightClick",
                            "controlAny",
                            "viewActivate",
                            "UIGet",
                            "Next"
                        ],
                        "examples": [
                            "controlChange"
                        ]
                    },
                    "name": {
                        "$id": "/properties/actions/items/properties/name",
                        "type": "string",
                        "title": "Name of action",
                        "default": "",
                        "examples": [
                            "All Files"
                        ]
                    },
                    "where": {
                        "$id": "/properties/actions/items/properties/where",
                        "type": "string",
                        "title": "Fully Qualified identifier of action location in the UX.",
                        "default": "",
                        "examples": [
                            "/WebControlPanel/list/Category/All Files"
                        ]
                    },
                    "message": {
                        "$id": "/properties/actions/items/properties/message",
                        "type": "string",
                        "title": "HTML content to display associated with the control or subitem of a control identified by the 'where' property.",
                        "default": "",
                        "examples": [
                            "Select \"All Files\"."
                        ]
                    },
                    "edge": {
                        "$id": "/properties/actions/items/properties/edge",
                        "type": "string",
                        "title": "Edge of control specified by the 'where' property to display the message (left, right, top, bottom).",
                        "default": "",
                        "enum": [
                            "left",
                            "right",
                            "top",
                            "bottom"
                        ],
                        "examples": [
                            "left"
                        ]
                    },
                    "step": {
                        "$id": "/properties/actions/items/properties/step",
                        "type": "integer",
                        "title": "Identifies this as the last action in a 'step'.",
                        "default": 0,
                        "examples": [
                            6
                        ]
                    },
                    "continue": {
                        "$id": "/properties/actions/items/properties/continue",
                        "type": "boolean",
                        "title": "Add the 'next' step to the 'page' this step is one.",
                        "default": false,
                        "examples": [
                            true
                        ]
                    },
                    "isLeaf": {
                        "$id": "/properties/actions/items/properties/isLeaf",
                        "type": "boolean",
                        "title": "The Continue Schema ",
                        "default": false,
                        "examples": [
                            true
                        ]
                    },
                    "linger": {
                        "$id": "/properties/actions/items/properties/linger",
                        "type": "boolean",
                        "title": "The Continue Schema ",
                        "default": false,
                        "examples": [
                            true
                        ]
                    },
                    "exactMatch": {
                        "$id": "/properties/actions/items/properties/exactMatch",
                        "type": "string",
                        "title": "For this step to complete, the value of the control specified by the 'where' property must match this value. Can be an object rather than a string if the control specified for 'where' does not match the control for the action.",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    },
                    "regexMatch": {
                        "$id": "/properties/actions/items/properties/regexMatch",
                        "type": "string",
                        "title": "The Message Schema ",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    },
                    "skipMatch": {
                        "$id": "/properties/actions/items/properties/skipMatch",
                        "type": "string",
                        "title": "If the value of the control specified by the 'where' property matches this value, this step is skipped. Can be an object rather than a string if the control specified for 'where' does not match the control for the action.",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    },
                    "skipExists": {
                        "$id": "/properties/actions/items/properties/skipExists",
                        "type": "string",
                        "title": "The Message Schema ",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    },
                    "skipIfWindow": {
                        "$id": "/properties/actions/items/properties/skipIfWindow",
                        "type": "string",
                        "title": "The Message Schema ",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    },
                    "skipIfNotWindow": {
                        "$id": "/properties/actions/items/properties/skipIfNotWindow",
                        "type": "string",
                        "title": "The Message Schema ",
                        "default": "",
                        "examples": [
                            "."
                        ]
                    }
                }
            }
        }
    }
}
<page api="js">
    <shortlink>ux component formViewData Method</shortlink>
    <topic parent="{dialog.object}" parentType="object" elementName="formViewData Method">{dialog.object}.formViewData Method</topic>
    <description>Populates a FormView control with data in a dataObject.</description>

    <prototype>{dialog.Object}.formViewData(UXformViewControlId,dataObject)</prototype>

    <arguments>
        <argument>
            <name>UXformViewControlId</name>
            <description>FormView control's ID.</description>
        </argument>
        <argument>
            <name>dataObject</name>
            <description>A JSON object containing the data to populate the FormView control.</description>
        </argument>
    </arguments>

    <example code="js"><![CDATA[var _d = {
	Firstname: 'Simon',
	Lastname: 'Jones'
}
{dialog.object}.formViewData('FORM_1',_d);]]></example>


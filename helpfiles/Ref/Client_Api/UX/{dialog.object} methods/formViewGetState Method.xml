    <prototypes>
        <prototype>var state = {dialog.object}.formViewGetState(UXFormViewControlID);</prototype>
    </prototypes>
    <arguments>
        <argument>
            <name>UXFormViewControlID</name>
            <type>string</type>
            <description>The FormView control's ID.</description>
        </argument>
    </arguments>
    <returns>
        <return>
            <name>state</name>
            <types>
                <type>object</type>
            </types>
            <description>Returns the FormView's state object.</description>
        </return>
    </returns>

<page>
	<topic>A5.Ink.setPen Method</topic>
	<description>Set the current pen.</description>
	<syntax>A5.Ink.setPen(pen)</syntax>
	<arguments>
		<argument>
			<name>pen</name>
			<type>object</type>
			<description>The pen settings.</description>
		</argument>
		<argument>
			<name>color</name>
			<type>string</type>
			<description>The color in CSS format for the pen.</description>
		</argument>
		<argument>
			<name>width</name>
			<type>number</type>
			<description>The width of the pen.</description>
		</argument>
		<argument>
			<name>lineCap</name>
			<type>string</type>
			<description>The line cap for the pen. Values are "round", "square" or "butt".</description>
		</argument>
	</arguments>
</page>

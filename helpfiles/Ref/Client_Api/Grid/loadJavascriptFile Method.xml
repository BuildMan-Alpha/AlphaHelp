<page api="js">
  <shortlink>grid component loadJavascriptFile method</shortlink>
  <topic parent="{grid.object}" parentType="object" elementName="loadJavascriptFile Method">{grid.object}.loadJavascriptFile Method</topic>
  <description>Loads Javascript from a file.</description>
  <syntax>{grid.Object}.loadJavascriptFile(javascriptFilename)</syntax>
  <arguments>
    <argument>
      <name>javascriptFilename</name>
      <type>String</type>
      <description>The name of the file containing the javascript to be loaded</description>
    </argument>
  </arguments>
  <sections>
    <section>
      <title>Example</title>
      <description>myjsfunctions.js  is loaded from the same folder in the webroot as the current component.</description>
      <example><![CDATA[{grid.Object}.loadJavascriptFile('myjsfunctions.js');]]></example>
    </section>
  </sections>
  <see>
    <ref link="Grid Component Properties and Methods">{grid.object}</ref>
  </see>

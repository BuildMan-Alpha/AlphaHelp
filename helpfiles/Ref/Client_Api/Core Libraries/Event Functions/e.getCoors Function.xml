<page api="js">
    <shortlink>corejs e_getCoors</shortlink>
    <topic>$e.getCoors Function</topic>
    <prototype>$e.getCoors(event as object)</prototype>
    <arguments>
        <argument>
            <name>event</name>
            <type>object</type>
            <description>The DOM event object.</description>
        </argument>
    </arguments>
    <description>Returns the x and y coordinates of a click event.</description>
    <sections>
        <section>
            <description>The returned object has the following properties:</description>
            <list>
                <item>
                    <name-title>Property</name-title>
                    <description-title>Description</description-title>
                </item>
                <item>
                    <name>clientX</name>
                    <description>The x position of the click.</description>
                </item>
                <item>
                    <name>clientY</name>
                    <description>The y position of the click.</description>
                </item>
            </list>
        </section>
        <section>
            <title>Example:</title>
            <example code="js"><![CDATA[var pos = $e.getCoors(event);
alert("X = " + pos.clientX + " Y = " + pos.clientX)]]></example>
        </section>
    </sections>
</page>
<page api="xb">
    <shortlink>api desktop api xdialog commands background</shortlink>
    <topic>{BACKGROUND}</topic>
    <description>The {BACKGROUND} command specifies the background color the dialog. </description>
    <syntax>{BACKGROUND= Color }</syntax>
    <arguments>
        <argument>
            <name>Color</name>
            <type>C</type>
            <description>The name of a color or an RGB format.</description>
        </argument>
    </arguments>
    <sections>
        <section>
            <title>Example</title>
            <example code="xb"><![CDATA[format = <<%dlg%
{size=2}
{ysize=2}
{background=Green}{stretch=bottom}<Click Here>
%dlg%
ui_dlg_box("Simple Xdialog", format)]]></example>
            <figure>
                <title>The resulting Xdialog with a green background</title>
                <alt>An Xdialog with a green background</alt>
                <link>images/XD_Background.png</link>
            </figure>
        </section>
    </sections>
    <limitations>Desktop applications only</limitations>
    <see>
        <ref link="api desktop api xdialog commands">Xdialog Commands</ref>
    </see>

</page>
      <ref link="Form Functions and Methods">Form Functions and Methods</ref>
      <ref link="Browse Functions and Methods">Browse Functions and Methods</ref>
       <ref link="api printable layouts report functions">Report Functions and Methods</ref>
   </see>
   <terms>reports,browse,delete,display,error,error message,field,forms,function,layout,logical</terms>
</page>
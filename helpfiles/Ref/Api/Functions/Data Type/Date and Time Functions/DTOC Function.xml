    <sections>
        <section>
            <title>Examples</title>
            <example>
                <![CDATA[dim now as D
now = now()
? now
= {12/12/2017}

? dtoc(now)
= "12/12/2017"

? dtoc(now,"12.")
= "2017.12.12"

? dtoc(now,"10",.f.)
= "12 Dec 2017"

' System Locale is set to France (Belgium):
? dtoc(now,"10",.t.)
= "12 déc 2017"

dim now2 as T
now2 = now()
? now2
= 12/12/2017 10:58:20 01 am

? dtoc(now2)
= "12/12/2017"

? dtoc(now2,"6-")
= "12-12-17"

? dtoc(now2,"4C",.f.)
= "DECEMBER 12, 2017"

' System Locale is set to France (Belgium):
? dtoc(now2,"4C",.t.)
= "DéCEMBRE 12, 2017"
]]>
            </example>
        </section>

<page api="xb">
	<shortlink>Window_to_Image function</shortlink>
	<topic>WINDOW_TO_IMAGE Function</topic>
	<description>The WINDOW_TO_IMAGE() function captures the image of an open window to a JPEG or BMP file.</description>
	
	<syntax>Result_Flag as N = WINDOW_TO_IMAGE( Window_Name as C, Type as C )</syntax>
	<arguments>
		<argument>
			<name>Result_Flag</name>
			<cases>
				<case>
					<description>0 = Image was created.</description>
				</case>
				<case>
					<description>1 = No image was created.</description>
				</case>
			</cases>
		</argument>
		<argument>
			<name>Window_Name</name>
			<description>The title bar text of an open window.
</description>
		</argument>
		<argument>
			<name>Type</name>
			<description>The format of the image file.</description>
			<cases>
				<case>
					<description>"B" = BMP</description>
				</case>
				<case>
					<description>"J" = JPEG</description>
				</case>
				<case>
					<description>"P" = PNG</description>
				</case>
				
			</cases>
		</argument>
		
		
	</arguments>
	<example><![CDATA[? Window_to_Image("Alpha Anywhere","B")
= 0 ]]></example>

<see>
	
	<ref href="/Ref/Api/Functions/Document Types/Bitmap and Graphic Functions/index.xml">Bitmap and Graphic Functions</ref>
</see>

</page>
   <syntax>C Result = JS_ESCAPE(text as c[,flags as c])</syntax>
   <arguments>
     <argument>
         <name>Result</name>
         <description>Escaped string</description>
     </argument>
     <argument>
         <name>text</name>
         <description>Original string</description>
     </argument>
     <argument>
         <name>flags</name>
         <description>U - encode as Unicode, UTF8 - encode as Unicode, assume that input is UTF8</description>
     </argument>
   </arguments>
  

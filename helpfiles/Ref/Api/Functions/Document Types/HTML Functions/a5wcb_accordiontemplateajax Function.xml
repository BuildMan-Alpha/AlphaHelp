    <topic>a5wcb_accordiontemplateajax Function</topic>
    <description>Generates a template for an HTML accordion container. Returns .html and .js properties. tabList is a crlf delimited list of tab labels.</description>
    <prototype>P a5wcb_AccordionTemplateAjax(C tabList [,N initialTabPaneNumber [,L singleBand [,C openPanes [,* ops ]]]])</prototype>
    <arguments>
        <argument>
            <name>tabList</name>
            <type>C</type>
            <description>A CR-LF delimited list of tab names.</description>
        </argument>
        <argument optional="true">
            <name>initialTabPaneNumber</name>
            <type>N</type>
            <description>Default = 1.</description>
        </argument>
        <argument optional="true">
            <name>singleBand</name>
            <type>L</type>
            <description>Default = .f..</description>
        </argument>
        <argument optional="true">
            <name>openPanes</name>
            <type>C</type>
            <description>Default = "".</description>
        </argument>
        <argument optional="true">
            <name>ops</name>
            <type>P</type>
            <description>Default = null_value().</description>
        </argument>
    </arguments>
    <terms>html,accordion,function,list,logical,tabs,template,templates</terms>
    <limitations>Internal Use Only</limitations>
</page>
<page api="xb">
    <topic>script_save Function</topic>
    <description>Save a script (must include password if saving over a protected script).</description>
    <syntax>C SCRIPT_SAVE(C script_name,C script_code[,C Password])</syntax>
    <arguments>
        <argument>
            <name>script_name</name>
            <type>C</type>
            <description>Character</description>
        </argument>
        <argument>
            <name>script_code</name>
            <type>C</type>
            <description>Character</description>
        </argument>
        <argument optional="true">
            <name>Password</name>
            <type>C</type>
            <description>Character</description>
        </argument>
    </arguments>
    <terms>script,function,password,save</terms>
</page>
<page api="xb">
    <shortlink>api script drop function</shortlink>
    <topic>script_drop Function</topic>
    <description>Drop a script (must include password if dropping a protected script).</description>
    <syntax>C SCRIPT_DROP(C script_name[,C Password])</syntax>
    <arguments>
        <argument>
            <name>script_name</name>
            <type>C</type>
            <description>Character</description>
        </argument>
        <argument optional="true">
            <name>Password</name>
            <type>C</type>
            <description>Character</description>
        </argument>
    </arguments>
    <terms>script,function,password</terms>
</page>
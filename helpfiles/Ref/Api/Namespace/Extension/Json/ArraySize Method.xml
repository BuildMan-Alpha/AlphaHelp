	<arguments>
		<argument>
			<name>json</name>
			<type>C</type>
			<description>Json array string.</description>
		</argument>
	</arguments>
	<returns>
		<return>
			<name>result</name>
			<type>n</type>
			<description>Number of elements in array</description>
		</return>
	</returns>

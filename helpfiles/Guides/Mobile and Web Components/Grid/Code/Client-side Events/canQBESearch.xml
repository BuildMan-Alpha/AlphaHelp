<page api="js">
    <shortlink>grid component client side canqbesearch event</shortlink>
    <topic>canQBESearch</topic>
    <description>Fires when the user tries to do a Query by Example (QBE) search. If the event returns false, the action is cancelled.</description>
    <!--<discussion></discussion>-->
    <arguments>
        <argument>
            <name>e</name>
            <type>object</type>
            <description>An object passed to the event that contains the following properties:</description>
            <properties>
                <property>
                    <name>qbeType</name>
                    <type>string</type>
                    <description>The search option selected from the QBE menu. Can be one of the following:</description>
                    <section>
                        <list bullet="true">
                            <item>
                                <name>Exact match</name>
                            </item>
                            <item>
                                <name>Starts with</name>
                            </item>
                            <item>
                                <name>Ends with</name>
                            </item>
                            <item>
                                <name>Contains</name>
                            </item>
                            <item>
                                <name>Greater than</name>
                            </item>
                            <item>
                                <name>Greater than or equal to</name>
                            </item>
                            <item>
                                <name>Less than</name>
                            </item>
                            <item>
                                <name>Less than or equal to</name>
                            </item>
                            <item>
                                <name>Wildcard</name>
                            </item>
                            <item>
                                <name>QBE Syntax</name>
                            </item>
                            <item>
                                <name>Is blank</name>
                            </item>
                            <item>
                                <name>Is null</name>
                            </item>
                            <item>
                                <name>Is not blank</name>
                            </item>
                            <item>
                                <name>is not null</name>
                            </item>
                            <item>
                                <name>Clear All Filters</name>
                            </item>
                        </list>
                    </section>
                </property>
            </properties>
        </argument>
    </arguments>
    <sections>
        <section>
            <description>To prevent the user from performing a QBE search, the event can return *[js:false]*. For example:</description>
            <example code="js"><![CDATA[return false;]]></example>
        </section>
    </sections>
</page>
<page>
    <shortlink>ux list clientside event afterserversidesort</shortlink>
    <topic>afterServerSideSort Event</topic>
    <description>Fires before the user tries to do a server-side sort action by clicking on a column heading. Direction is 'a' or 'd'.</description>
    <arguments>
        <argument>
            <name>e</name>
            <type>object</type>
            <description>An object that contains the following properties:</description>
            <properties>
                <property>
                    <name>column</name>
                    <type>string</type>
                    <description>The column that was selected.</description>
                </property>
                <property>
                    <name>direction</name>
                    <type>string</type>
                    <description>The sort direction. Will be either *[js:'a']* (ascending) or *[js:'d']* (descending).</description>
                </property>
            </properties>
        </argument>
    </arguments>
    <see>
        <ref link="list control ux api">List Control JavaScript Methods</ref>

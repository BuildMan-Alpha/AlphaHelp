<page>
    <shortlink>ux list clientside event afterrefreshrow</shortlink>
    <topic>afterRefreshRow Event</topic>
    <description>Fires after an Ajax callback to refresh the current row in the List has completed.</description>
    <arguments>
        <argument>
            <name>e</name>
            <type>object</type>
            <description>An object that contains the following properties:</description>
            <properties>
                <property>
                    <name>logicalRow</name>
                    <type>number</type>
                    <description>The row that was refreshed.</description>
                </property>
                <property>
                    <name>recordFound</name>
                    <type>boolean</type>
                    <description>Indicates whether or not the record was found.</description>
                </property>
            </properties>
        </argument>
    </arguments>
    <see>
        <ref link="list control ux api">List Control JavaScript Methods</ref>
    </see>
</page>
<page api="js">
    <shortlink>grid component client side afterdetailviewcanceledits event</shortlink>
    <topic>afterDetailViewCancelEdits</topic>
    <description>Fires when the Detail View state has changed. Possible states are 'view', 'change', and 'enter'.</description>
    <!--<discussion></discussion>-->
    <arguments>
        <argument>
            <name>e</name>
            <type>object</type>
            <description>An object passed to the event that contains the following properties:</description>
            <properties>
                <property>
                    <name>mode</name>
                    <type>C</type>
                    <description>The Detail View's state. Possible values are:</description>
                    <list>
                        <item>
                            <name-title>Mode</name-title>
                            <description-title>&#160;</description-title>
                        </item>
                        <item>
                            <name>view</name>
                            <description>&#160;</description>
                        </item>
                        <item>
                            <name>change</name>
                            <description>&#160;</description>
                        </item>
                        <item>
                            <name>enter</name>
                            <description>&#160;</description>
                        </item>
                    </list>
                </property>
                <property>
                    <name>isDirty</name>
                    <type>boolean</type>
                    <description>Indicates whether or not any edits have been made to the Detail View. If isDirty is true, the current record has been edited.</description>
                </property>
                <property>
                    <name>rowNumber</name>
                    <type>number</type>
                    <description>The row number of the Grid row that fired the event. New record rows have negative row numbers.</description>
                </property>
            </properties>
        </argument>
    </arguments>

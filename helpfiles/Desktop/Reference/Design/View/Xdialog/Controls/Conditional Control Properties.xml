<page>
        <topic>Conditional Control Properties</topic>
 <sections>
    <section>
            <title>Setup Properties
</title>
         <cases>
                 <case>
                         <title>Object Name</title>
                         <description>The name of the control.</description>
                         <example><![CDATA[:formname.controlname.object.name as C
]]></example>
                 </case>
                   <case>
                         <title>Condition</title>
                         <description>The expressions that determines when the conditional pages are visible.</description>
                         <example><![CDATA[:formname.controlname.conditional.sheet.condition_expression as C
]]></example>
                 </case>
                   <case>
                         <title>Label</title>
                         <description>The names of the conditional pages.</description>
                         <example><![CDATA[:formname.controlname.conditional.sheet.text as C]]></example>
                 </case>
                   <case>
                         <title>Shrinkable</title>
                         <description>Determines whether the control can shrink for printing purposes. Note: Objects placed in page headers or footers cannot shrink because the size of the page header or footer has to be the same for every page on the report.</description>
                         <example><![CDATA[:formname.controlname.object.shrinkable as L]]></example>
                 </case>
                 
                 
         </cases>   
            
            
    </section>     
         <section>
                 <figure><link>images/Conditional_Control_Setup_Properties.gif</link></figure>
         </section>
     <section>
            <title>Dimension Properties</title>
         <cases>
                 <case>
                         <title>Left</title>
                         <description>Sets the horizontal position of the control.
</description>
                         <example><![CDATA[:formname.controlname.object.left as N]]></example>
                 </case>
                 <case>
                         <title>Top</title>
                         <description>Sets the vertical position of the control.</description>
                         <example><![CDATA[:formname.controlname.object.top as N]]></example>
                 </case>
                 <case>
                         <title>Width</title>
                         <description>Sets the width of the control.</description>
                         <example><![CDATA[:formname.controlname.object.width as N]]></example>
                 </case>
                 <case>
                         <title>Height</title>
                         <description>Sets the height of the control.</description>
                         <example><![CDATA[:formname.controlname.object.height as N]]></example>
                 </case>
                 <case>
                         <title>Anchor</title>
                         <description>Determines the way the tabbed control will or will not stretch as the base form is resized. </description>
                         <example><![CDATA[:formname.controlname.object.anchor as N ]]></example>
                         <cases>
                                 <case>
                                         <description>Possible attachment points are:
</description>              
                                 </case>
                                     <case>
                                         <description>1 = top and right
</description>              
                                 </case>
                                     <case>
                                         <description>2 = top, left, and right
</description>              
                                 </case>
                                     <case>
                                         <description>4 = bottom and left</description>              
                                 </case>
                                     <case>
                                         <description>5 = bottom and right</description>              
                                 </case>
                                     <case>
                                         <description>6 = bottom, left, and right
</description>              
                                 </case>
                                     <case>
                                         <description>8 = top, bottom, and left
</description>              
                                 </case>
                                     <case>
                                         <description>9 = top, bottom, and right
</description>              
                                 </case>
                                     <case>
                                         <description>10 = top, bottom, left, and right</description>              
                                 </case>
                                  
                         </cases>
                 </case>
                 
                 
         </cases>   
            
            
    </section>     
           <section>
                 <figure><link>images/Conditional_Control_Dimension_Properties.gif</link></figure>
         </section>      
         
 </sections>       
        
        
</page>
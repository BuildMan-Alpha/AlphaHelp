<page>
	<topic>Run a Script</topic>
	<description>The Run a Script action runs an Xbasic script.</description>
	<sections>
		
		
		<section>
			<title>Procedure</title>
			<steps>
				<step>
					<description>Select the script to run from the Name of script to run list.</description>
				</step>
				<step>
					<description>Select one of the Run Options. The script run mode options are:</description>
					<cases>
						<case>
							<description>"Standard" </description>
						</case>
						<case>
							<description>"Local" </description>
						</case>
						<case>
							<description>"Spawn" </description>
						</case>
						
					</cases>
					
					
				</step>
				<step>
					<description>Click Next >.</description>
				</step>
				<step>
					<description>Optionally modify the comment that describes the action.</description>
				</step>
				<step>
					<description>Click Finish.</description>
				</step>
			
			</steps>
		</section>
		
	</sections>
